{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "build:styles": {
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**/*.scss", "src/**/*.sass"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:styles"]
    }
    // ... rest of your tasks
  },
  "globalDependencies": [
    "packages/common/**/*"
    // Remove styles from global deps since it'll be pre-built
  ]
}