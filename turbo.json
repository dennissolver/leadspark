{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "env": [
        "GOOGLE_MAPS_API_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY"
      ]
    },
    "build:styles": {
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**/*.scss", "src/**/*.sass"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:styles"]
    }
  },
  "globalDependencies": [
    "packages/common/**/*"
  ]
}
